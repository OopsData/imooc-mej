extends ../layout

block content
    .container
        .row.col-xs-12
            h4 输入资源地址
            .form-group
                .col-xs-7
                    input.form-control.resource(type="text" placeholder="http://www.iqiyi.com/v_19rrkkhmv8.html" value="http://www.iqiyi.com/v_19rrkkhmv8.html")
                .col-xs-5
                    button.btn.btn-primary.search(type="button") 搜索
                    button.btn.btn-primary.startTrack(type="button") 开始跟踪
                    button.btn.btn-primary.stopTrack(type="button") 停止跟踪
                    a.btn.btn-primary.add(href="/admin/movie/new") 增加
        .row.col-xs-10.myAlert
            .alert.alert-warning.alert-dismissible.hide(role="alert")
                button.close
                    span(aria-hidden="true") &times;
                span
        .row.col-xs-9
            table.table.table-hover.table-border.myTable
                thead
                    tr 
                        th 资源名称
                        th 播放数量
                        th 播放时长
                        th 点赞数
                        th 点踩数
                        th 评论数
                        th 分享数
                        th 得分
                tbody
                    
    script(src="/js/admin.js")

